{
  "name": "root",
  "version": "independent",
  "private": true,
  "description": "Then open-source alternative to Twilio",
  "bugs": {
    "url": "https://github.com/fonoster/fonoster/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fonoster/fonoster.git"
  },
  "license": "MIT",
  "author": "Pedro Sanders <psanders@fonoster.com>",
  "type": "module",
  "main": "dist/index",
  "types": "dist/index",
  "directories": {
    "test": "test",
    "src": "src"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "mods/*"
  ],
  "scripts": {
    "prebuild": "npm run generate:prisma-clients",
    "build": "lerna run build",
    "postbuild": "npm run copy:hbstemplates && npm run copy:prisma-clients",
    "bump:version": "rimraf mods/**/.lerna-changed-buster-* && lerna exec -- touch .lerna-changed-buster-$RANDOM",
    "check:updates": "lerna exec -- npx npm-check-updates",
    "clean": "rimraf mods/**/dist mods/**/node_modules mods/**/package-lock.json node_modules package-lock.json",
    "copy:hbstemplates": "node .scripts/copy-hbs.cjs",
    "copy:prisma-clients": "sh ./.scripts/copy-prisma-clients.sh",
    "db:migrate": "npx prisma migrate dev --schema mods/apiserver/schema.prisma --name changeme --preview-feature && npx prisma migrate dev --schema mods/identity/schema.prisma --name changeme --preview-feature",
    "db:seed": "tsx mods/apiserver/src/core/seed.ts",
    "format": "prettier --write mods/**/src",
    "generate:keypair": ".scripts/gen-keypair.sh",
    "generate:prisma-clients": "npx prisma generate --schema mods/apiserver/schema.prisma && npx prisma generate --schema mods/identity/schema.prisma",
    "generate:protos": ".scripts/gen-code-proto.sh",
    "postgenerate:protos": "lerna run build",
    "generate:readme": "lerna run generate:readme && git add mods/**/README.md",
    "postinstall": "npm run generate:prisma-clients",
    "integration": "cross-env LOGS_LEVEL=none NODE_ENV=development mocha --slow 50000 --timeout 10000 'mods/**/node.integration.ts' 'mods/**/*.integration.test.ts'",
    "preintegration:web": "npx playwright install && npx playwright install-deps",
    "integration:web": "web-test-runner --node-resolve --playwright --browsers chromium webkit firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "release": "lerna publish --yes --no-git-reset --dist-tag latest $(./.scripts/next-release.sh) --message \"chore(release): publish %s [skip ci]\"",
    "release:frompackages": "lerna publish from-package",
    "release:prerelease": "lerna publish --dist-tag next",
    "start:apiserver": "cross-env NODE_ENV=development LOGS_LEVEL=verbose npm run start:dev -w @fonoster/apiserver",
    "start:audiosocket": "cross-env NODE_ENV=development LOGS_LEVEL=verbose npm run start:dev -w @fonoster/streams",
    "start:authz": "cross-env NODE_ENV=development LOGS_LEVEL=verbose npm run start:dev -w @fonoster/authz",
    "start:autopilot": "cross-env NODE_ENV=development AUTOPILOT_CONVERSATION_PROVIDER=file AUTOPILOT_CONVERSATION_PROVIDER_FILE=$(pwd)/config/assistant.json LOGS_LEVEL=verbose npm run start:dev -w @fonoster/autopilot",
    "start:dashboard": "cross-env NODE_ENV=development npm run dev -w @fonoster/dashboard",
    "start:mcp": "cross-env NODE_ENV=development LOGS_LEVEL=verbose npm run start:dev -w @fonoster/mcp",
    "start:oauth2-demo": "npm run start:oauth2-demo -w @fonoster/sdk",
    "start:sdk-demo": "npm run start:demo -w @fonoster/sdk",
    "start:services": "cross-env docker compose -f compose.yaml -f compose.dev.yaml up routr nats envoy influxdb postgres adminer mailhog rtpengine asterisk -d --remove-orphans",
    "start:storybook": "cross-env NODE_ENV=development npm run storybook -w @fonoster/dashboard",
    "start:voice": "cross-env NODE_ENV=development LOGS_LEVEL=verbose npm run start:dev -w @fonoster/voice",
    "stop:services": "cross-env docker compose -f compose.yaml -f compose.dev.yaml down",
    "pretest": ".scripts/check-preconditions.sh && npm run generate:keypair",
    "test": "cross-env LOGS_LEVEL=none NODE_ENV=development mocha --timeout 30000 --ignore 'mods/**/*.integration.test.ts' 'mods/!(dashboard)/**/*.test.ts'"
  },
  "nodemonConfig": {
    "exec": "tsx",
    "ext": "ts",
    "ignore": "**/*.d.ts",
    "watch": [
      "mods/**"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "xstate": "5.17.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3.3.3",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.19.27",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "chai-as-promised": "^8.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^15.13.0",
    "grpc-tools": "^1.13.1",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "husky": "^9.0.11",
    "jsdoc-to-markdown": "^8.0.1",
    "lerna": "^9.0.3",
    "mocha": "^11.7.5",
    "next": "^14.1.0",
    "nodemon": "^3.1.11",
    "nx": "^22.3.3",
    "prettier": "^3.7.4",
    "prisma": "^6.19.1",
    "protoc-gen-grpc-web": "^1.5.0",
    "protoc-gen-js": "^3.21.4-4",
    "rimraf": "^6.1.2",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.1",
    "tsx": "^4.21.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "^4.29.1",
    "@rollup/rollup-linux-arm64-musl": "^4.29.1",
    "@rollup/rollup-linux-x64-gnu": "^4.29.1",
    "@rollup/rollup-linux-x64-musl": "^4.29.1"
  },
  "engines": {
    "node": ">=20.11.1"
  },
  "prisma": {
    "seed": "tsx mods/apiserver/src/core/seed.ts"
  }
}
